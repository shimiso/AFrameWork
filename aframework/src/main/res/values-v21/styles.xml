<resources>
    <!--Android5.0 21版本以上的兼容性样式-->
    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--ToolbarText的大小和颜色-->
        <item name="android:actionMenuTextAppearance">@style/ToolbarTextAppearance</item>
        <!--ToolbarTitleText的大小和颜色-->
        <item name="android:titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <!--透明背景弹出层样式 -->
    <style name="DialogStyleBottom" parent="BaseAppTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 设置无标题 -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationDialogActivity</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
